<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yicooll.dong.lashou.activity.LoginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FF4400"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/im_login_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@drawable/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/menu_click_selector"
            android:text="登陆"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/menu_click_selector"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="20sp"/>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/rg_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_account_logn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="账户登陆"
            android:textColor="@drawable/radio_login_selector"
            android:textSize="22sp"/>

        <RadioButton
            android:id="@+id/rb_login_fast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="快速登陆"
            android:textColor="@drawable/radio_login_selector"
            android:textSize="22sp"/>
    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal">

        <View
            android:layout_width="288dp"
            android:layout_height="2dp"
            android:layout_centerVertical="true"
            android:background="@color/gray"/>

        <View
            android:id="@+id/v_line"
            android:layout_width="144dp"
            android:layout_height="4dp"
            android:layout_centerVertical="true"
            android:background="@color/appcolor"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/shap_stroke_corner_darkgray"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/edittext_selector"
            android:ems="11"
            android:gravity="center_vertical"
            android:hint="用户名/邮箱/手机号"
            android:padding="10dp"
            android:singleLine="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/et_pwd_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edittext_selector"
                android:ems="11"
                android:hint="请输入密码"
                android:padding="10dp"
                android:singleLine="true"/>

            <Button
                android:id="@+id/btn_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edittext_selector"
                android:text="获取验证码"
                android:textColor="@color/appcolor"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="10dp"
        android:background="@drawable/button_login_selector"
        android:enabled="false"
        android:text="登陆"
        android:textColor="@color/white"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="right"
        android:text="忘记密码"
        android:textColor="@color/appcolor"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="你也可以点击下方的图标使用第三方登录"
        android:textSize="16sp"/>

    <View
        android:layout_width="200dp"
        android:layout_height="0.5dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_qq_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ico_qq_accout"
            android:gravity="center"
            android:text="QQ"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv_weixin_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ico_qq_wixin"
            android:gravity="center"
            android:text="微信"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv_sina_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ico_sina_weibo"
            android:gravity="center"
            android:text="新浪微博"
            android:textSize="20sp"/>
    </LinearLayout>


</LinearLayout>
