<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yicooll.dong.lashou.activity.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FF4400"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/im_register_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@drawable/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/menu_click_selector"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/shap_stroke_corner_darkgray"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:ems="11"
            android:singleLine="true"
            android:id="@+id/et_register_name"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/edittext_selector"
            android:hint="用户名"
            android:padding="10dp"/>

        <EditText
            android:ems="12"
            android:singleLine="true"
            android:id="@+id/et_register_pwd"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/edittext_selector"
            android:hint="密码"
            android:padding="10dp"/>

        <EditText
            android:ems="12"
            android:singleLine="true"
            android:id="@+id/et_comfirm_pwd"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/edittext_selector"
            android:hint="确认"
            android:padding="10dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@color/appcolor"
        android:text="注册"/>

</LinearLayout>
