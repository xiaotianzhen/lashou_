<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              tools:context="com.yicooll.dong.lashou.fragment.NearbyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FF4400"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/menu_click_selector"
            android:text="附近"
            android:textColor="@color/white"
            android:textSize="20sp"/>

    </LinearLayout>

    <include layout="@layout/layout_location"/>

    <GridView
        android:scrollbars="none"
        android:id="@+id/gridV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:horizontalSpacing="10dp"
        android:numColumns="3"
        android:padding="20dp"
        android:verticalSpacing="20dp"></GridView>

</LinearLayout>
